
table.table.table-striped
  thead.table-dark.black.white-text
    tr
      th(scope='col')  #
      th(scope='col')  Application Name
      th(scope='col')  Sub Application Name
      th(scope='col')  Source Application
      th(scope='col')  Target Application
      th(scope='col')  Service Name
      th(scope='col')  Operation Name
      th(scope='col')  Service Name Version
      th(scope='col')  Configuration URL
      th(scope='col')  Application Package
      th(scope='col')  Service Type
      th(scope='col')  Application Support Type
      th(scope='col')  Service Health
  tbody
    each dat, i in app2DataList
      tr
        th(scope='row') #{i+1}
        td  #{dat.application_name}
        td  #{dat.sub_application_name}
        td  #{dat.source_application}
        td  #{dat.target_application}
        td  #{dat.service_name}
        td  #{dat.operation_name}
        td  #{dat.service_name_version}
        td  #{dat.configuration_url}
        td  #{dat.application_package_name}
        td  #{dat.service_type}
        td  #{dat.application_support_type}
        if dat.service_operation_health === 1
          td.table-success
        else
          td.table-danger